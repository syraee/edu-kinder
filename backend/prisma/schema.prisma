generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int       @id @default(autoincrement())
  firstName String?
  lastName  String?
  role      Role?      @relation(fields: [roleId], references: [id])
  roleId    Int?
  email     String    @unique
  active    Boolean
  internal  Boolean @default(false)
  phone     String?
  createdAt DateTime  @default(now())

  teachingClasses GroupClass[]
  children  ChildGuardian[]
  loginTokens LoginToken[]
  sessions  Session[]
  attendanceLogs AttendanceLog[]

  changeLogs      ChangeLog[]
  sentMessages     Message[] @relation("MessageSender")
  receivedMessages Message[] @relation("MessageRecipient")

}

model Role {
  id    Int    @id @default(autoincrement())
  type  String
  users User[]
}

model Child {
  id        Int        @id @default(autoincrement())
  firstName String
  lastName  String
  startDate DateTime
  groupId   Int?
  birthday  DateTime?
  createdAt DateTime   @default(now())
  group     GroupClass? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  guardians ChildGuardian[]
  mealAttendances MealAttendance[]

  FaceEmbedding FaceEmbedding[]

  attendances    Attendance[]
  attendanceLogs AttendanceLog[]

  mealMonthlyStatement MealMonthlyStatement[]
  payments        Payment[]

}

model ChildGuardian {
  id         Int   @id @default(autoincrement())
  user       User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  relationship String
  child      Child @relation(fields: [childId], references: [id])
  childId    Int
}

model GroupClass {
  id           Int      @id @default(autoincrement())
  name         String
  class        String
  classYear    DateTime
  classTeacherId  Int?
  classTeacher    User?    @relation(fields: [classTeacherId], references: [id], onDelete: SetNull)
  roomName        String

  children     Child[]
  events       EventOnClass[]
  PhotoOnClass PhotoOnClass[]
}

model LoginToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  tokenHash String
  expiresAt DateTime
  createdAt DateTime @default(now())
  usedAt    DateTime?
}

model Session {
  idHash    String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model MealAttendance {
  id        Int      @id @default(autoincrement())
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId   Int
  date      DateTime
  mask      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([childId, date])
  @@index([date])
}

model Attendance {
  id        Int      @id @default(autoincrement())
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId   Int
  date      DateTime
  state     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([childId, date])
}

model AttendanceLog {
  id        Int      @id @default(autoincrement())
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId   Int
  date      DateTime
  from      Int
  to        Int
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId    Int?
  userEmail String
  createdAt DateTime @default(now())
}
model PaymentSettings {
  id           Int      @id @default(autoincrement())

  breakfastFee   Decimal @db.Decimal(10, 2)
  lunchFee       Decimal @db.Decimal(10, 2)
  snackFee       Decimal @db.Decimal(10, 2)
  tuitionFee     Decimal @db.Decimal(10, 2)
  tuitionFeeExt     Decimal @db.Decimal(10, 2)

  mealsIban    String
  tuitionIban  String

  mealsVarSym   String
  tuitionVarSym  String


  validFrom    DateTime @default(now())
  validTo      DateTime?

  createdAt    DateTime @default(now())
  mealMonthlyStatement MealMonthlyStatement[]
}

model Payment {
  id        Int      @id @default(autoincrement())
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId    Int
  amount    Decimal
  feeType   FeeType   // STRAVA
  paidAt    DateTime
}

enum FeeType {
  SKOLNE
  STRAVA
}

model ChangeLog {
  id            Int      @id @default(autoincrement())
  changedAt     DateTime @default(now())
  userId        Int
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  oldValues     String
  newValues     String
  description   String

  @@index([userId, changedAt])
}

enum MealStatementStatus {
  UNPAID
  PAID
  PARTIAL
  CANCELED
}

model MealMonthlyStatement {
  id           Int       @id @default(autoincrement())

  child        Child     @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId      Int

  month        DateTime

  plannedDays  Int

  breakfastCount Int     @default(0)
  lunchCount     Int     @default(0)
  snackCount     Int     @default(0)

  mealsAmount    Decimal @db.Decimal(10, 2)
  carryOverIn    Decimal @db.Decimal(10, 2)
  totalToPay     Decimal @db.Decimal(10, 2)
  carryOverOut   Decimal @db.Decimal(10, 2)

  status         MealStatementStatus @default(UNPAID)
  paymentSettings PaymentSettings? @relation(fields: [paymentSettingsId], references: [id])
  paymentSettingsId Int?
  qrPayload      String?

  generatedAt    DateTime @default(now())
  paidAt         DateTime?

  @@unique([childId, month])
  @@index([childId, month])
}

model Message {
  id           Int      @id @default(autoincrement())
  senderId     Int
  recipientId  Int
  value        String
  createdAt    DateTime @default(now())

  notified     Boolean  @default(false)
  readAt       DateTime?

  isAttachment   Boolean @default(false)
  attachmentName String?
  attachmentMime String?
  attachmentSize Int?

  sender       User     @relation("MessageSender", fields: [senderId], references: [id])
  recipient    User     @relation("MessageRecipient", fields: [recipientId], references: [id])

  @@index([senderId, createdAt])
  @@index([recipientId, createdAt])
  @@index([senderId, recipientId, createdAt])
}


enum FaceRecognitionStatus {
  pending
  processing
  done
  failed
}

model EventOnClass {
  eventId Int
  classId Int

  event Event      @relation(fields: [eventId], references: [id], onDelete: Cascade)
  class GroupClass @relation(fields: [classId], references: [id])

  @@id([eventId, classId])
}

model Event {
  id         Int            @id @default(autoincrement())
  name       String
  schoolYear String
  photos     Photo[]
  classes    EventOnClass[]
}

model PhotoOnClass {
  photoId Int
  classId Int
  photo   Photo      @relation(fields: [photoId], references: [id], onDelete: Cascade)
  class   GroupClass @relation(fields: [classId], references: [id], onDelete: Cascade)

  @@id([photoId, classId])
}

model Photo {
  id           Int            @id @default(autoincrement())
  filePath     String
  eventId      Int
  event        Event          @relation(fields: [eventId], references: [id])
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt @db.Timestamp(6)
  PhotoOnClass PhotoOnClass[]
}

model FaceEmbedding {
  id        Int      @id @default(autoincrement())
  childId   Int
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  embedding Float[] // InsightFace embedding je pole čísel (napr. 512-dim)
  createdAt DateTime @default(now())

  @@index([childId])
}