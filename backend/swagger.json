{
  "openapi": "3.0.0",
  "info": {
    "title": "EDUkinder API",
    "version": "1.0.0",
    "description": "Manuálna dokumentácia pre EDUkinder backend"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Lokálny server"
    }
  ],
  "paths": {
    "/api/users": {
      "get": {
        "summary": "Získaj zoznam všetkých používateľov",
        "responses": {
          "200": {
            "description": "Úspešná odpoveď - zoznam používateľov",
            "content": {
              "application/json": {
                "example": [
                  {
                    "id": 1,
                    "name": "Marek",
                    "email": "marek@example.com"
                  },
                  {
                    "id": 2,
                    "name": "Eva",
                    "email": "eva@example.com"
                  }
                ]
              }
            }
          }
        }
      },
      "post": {
        "summary": "Vytvor nového používateľa",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Používateľ úspešne vytvorený",
            "content": {
              "application/json": {
                "example": {
                  "id": 3,
                  "name": "Jana",
                  "email": "jana@example.com"
                }
              }
            }
          }
        }
      }
    },
    "/api/register/send-mail": {
      "post": {
        "summary": "Posli email pouzivatelovi na registraciu do systtemu",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  }
                },
                "required": [
                  "email"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email uspesne odoslany pouzivatelovi"
          }
        }
      }
    }
  }
}
